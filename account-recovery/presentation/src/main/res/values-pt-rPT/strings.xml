<resources>
  <!-- Grace period - info -->
  <string name="account_recovery_grace_period_info_title">Pedido de reposição da palavra-passe feito</string>
  <plurals name="account_recovery_grace_period_info_subtitle">
    <item quantity="one">Um pedido de reposição da palavra-passe foi feito por <b>%1$s</b>. Pode mudar a sua palavra-passe em %2$d hora.\n\nSe não fez este pedido, cancele agora.</item>
    <item quantity="other">Um pedido de reposição da palavra-passe foi feito por <b>%1$s</b>. Pode mudar a sua palavra-passe em %2$d horas.\n\n Se não fez este pedido, cancele agora.</item>
  </plurals>
  <!-- Grace period - cancellation form -->
  <string name="account_recovery_cancel_title">Cancelar a reposição da palavra-passe?</string>
  <string name="account_recovery_cancel_subtitle">Introduza a sua palavra-passe para cancelar.</string>
  <string name="account_recovery_cancel_password_label">Palavra-passe atual</string>
  <string name="account_recovery_cancel_password_placeholder">Palavra-passe</string>
  <string name="account_recovery_cancel_now">Cancelar a reposição da palavra-passe</string>
  <string name="account_recovery_cancel_back">Voltar</string>
  <!-- Account recovery cancelled -->
  <string name="account_recovery_cancelled_title">Reposição da palavra-passe cancelada</string>
  <string name="account_recovery_cancelled_subtitle">Se nunca mudou a sua palavra-passe, a sua conta pode estar em risco.\n\n Aumente a segurança da sua conta ao mudar a sua palavra-passe.</string>
  <!-- Password change period -->
  <string name="account_recovery_password_started_title">Reposição de palavra-passe disponível</string>
  <string name="account_recovery_password_started_subtitle">Para repor a sua palavra-passe, volte ao dispositivo e navegador em que fez o seu pedido de reposição de palavra-passe. \n\nTerá que fazer isto antes de %s.\n\n Se não pediu para repor a sua palavra-passe, cancele a reposição agora.</string>
  <!-- Recovery window ended -->
  <string name="account_recovery_window_ended_title">Reposição de palavra-passe expirado</string>
  <string name="account_recovery_window_ended_subtitle">Terá de pedir uma nova reposição de palavra-passe para %s.</string>
  <!-- Other -->
  <string name="account_recovery_cancel">Cancelar pedido</string>
  <string name="account_recovery_dismiss">Entendi</string>
</resources>
