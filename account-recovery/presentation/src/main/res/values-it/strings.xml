<resources>
  <!-- Grace period - info -->
  <string name="account_recovery_grace_period_info_title">Reimpostazione della password richiesta</string>
  <plurals name="account_recovery_grace_period_info_subtitle">
    <item quantity="one">È stata richiesta una reimpostazione della password per <b>%1$s</b>. Puoi modificare la tua password tra %2$d ora.\n\nSe non hai effettuato tu questa richiesta, annullala adesso.</item>
    <item quantity="other">È stata richiesta una reimpostazione della password per <b>%1$s</b>. Puoi modificare la tua password tra %2$d ore.\n\nSe non hai effettuato tu questa richiesta, annullala adesso.</item>
  </plurals>
  <!-- Grace period - cancellation form -->
  <string name="account_recovery_cancel_title">Annullare la reimpostazione della password?</string>
  <string name="account_recovery_cancel_subtitle">Inserisci la password per annullare.</string>
  <string name="account_recovery_cancel_password_label">Password attuale</string>
  <string name="account_recovery_cancel_password_placeholder">Password</string>
  <string name="account_recovery_cancel_now">Annulla la reimpostazione della password</string>
  <string name="account_recovery_cancel_back">Indietro</string>
  <!-- Account recovery cancelled -->
  <string name="account_recovery_cancelled_title">Reimpostazione della password annullata</string>
  <string name="account_recovery_cancelled_subtitle">Se non sei stato tu a chiedere il cambio della password, il tuo account potrebbe essere a rischio.\n\nProteggilo cambiando la password.</string>
  <!-- Password change period -->
  <string name="account_recovery_password_started_title">Reimpostazione della password disponibile</string>
  <string name="account_recovery_password_started_subtitle">Per reimpostare la tua password, torna al dispositivo e browser da cui hai effettuato la richiesta di reimpostazione della password.\n\nDovrai farlo prima del %s.\n\nSe non sei stato tu a chiedere la reimpostazione della password, annullala adesso.</string>
  <!-- Recovery window ended -->
  <string name="account_recovery_window_ended_title">Reimpostazione della password scaduta</string>
  <string name="account_recovery_window_ended_subtitle">Dovrai richiedere una nuova reimpostazione della password per %s.</string>
  <!-- Other -->
  <string name="account_recovery_cancel">Annulla la richiesta</string>
  <string name="account_recovery_dismiss">Ho capito</string>
</resources>
