<resources>
  <!-- Grace period - info -->
  <string name="account_recovery_grace_period_info_title">Restablecimiento de contraseña solicitado</string>
  <plurals name="account_recovery_grace_period_info_subtitle">
    <item quantity="one">Se ha solicitado el restablecimiento de la contraseña para <b>%1$s</b>. Puede cambiar su contraseña en %2$d hora.\n\nSi no ha realizado esta solicitud, cancélela ahora.</item>
    <item quantity="other">Se ha solicitado el restablecimiento de la contraseña para <b>%1$s</b>. Puede cambiar su contraseña en %2$d horas.\n\nSi no ha realizado esta solicitud, cancélela ahora.</item>
  </plurals>
  <!-- Grace period - cancellation form -->
  <string name="account_recovery_cancel_title">¿Cancelar el restablecimiento de la contraseña?</string>
  <string name="account_recovery_cancel_subtitle">Ingrese su contraseña para cancelar.</string>
  <string name="account_recovery_cancel_password_label">Contraseña actual</string>
  <string name="account_recovery_cancel_password_placeholder">Contraseña</string>
  <string name="account_recovery_cancel_now">Cancelar restablecimiento de contraseña</string>
  <string name="account_recovery_cancel_back">Regresar</string>
  <!-- Account recovery cancelled -->
  <string name="account_recovery_cancelled_title">Restablecimiento de contraseña cancelado</string>
  <string name="account_recovery_cancelled_subtitle">Si nunca ha solicitado el cambio de su contraseña, su cuenta podría estar en peligro.\n\nAsegure su cuenta cambiando su contraseña.</string>
  <!-- Password change period -->
  <string name="account_recovery_password_started_title">Restablecimiento de contraseña disponible</string>
  <string name="account_recovery_password_started_subtitle">Para restablecer la contraseña, vaya al dispositivo y navegador del cual realizó la solicitud de restablecimiento.\n\nNecesitará hacer esto antes de %s.\n\nSi no solicitó restablecer la contraseña, cancele la solicitud ahora.</string>
  <!-- Recovery window ended -->
  <string name="account_recovery_window_ended_title">Restablecimiento de contraseña expirado</string>
  <string name="account_recovery_window_ended_subtitle">Tendrá que solicitar un nuevo restablecimiento de contraseña para %s.</string>
  <!-- Other -->
  <string name="account_recovery_cancel">Cancelar solicitud</string>
  <string name="account_recovery_dismiss">Entendido</string>
</resources>
